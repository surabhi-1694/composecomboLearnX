<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Android2o" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.appsplash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/teal_200</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_shopping</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Android2o</item>
    </style>

    <style name="txt_title">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
    </style>


    <style name="txt_desc">
        <item name="android:textColor">@color/greyblack_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>
</resources>