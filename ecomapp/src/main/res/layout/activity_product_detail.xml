<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.ProductDetailActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name"
        style="@style/txt_title"
        />
<!--    Image with pager view -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_Title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/app_name"
        style="@style/txt_desc"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/app_name"
        style="@style/txt_desc"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_ActualPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintEnd_toStartOf="@id/txt_Price"
        tools:text="@string/app_name"
        style="@style/txt_desc"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cart"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintEnd_toStartOf="@+id/img_favourite"
        android:src="@drawable/baseline_shopping_cart_24"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_favourite"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/favourite_selector" />


</androidx.constraintlayout.widget.ConstraintLayout>